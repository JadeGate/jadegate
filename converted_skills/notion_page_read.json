{
  "jade_version": "1.0.0",
  "skill_id": "notion_page_read",
  "metadata": {
    "name": "Notion Page Reader",
    "version": "1.0.0",
    "description": "Read a Notion page content via official API with block parsing",
    "author": "jadegate-community",
    "tags": [
      "notion",
      "api",
      "page",
      "read"
    ],
    "license": "MIT",
    "created_at": "2026-02-21T03:00:00Z",
    "updated_at": "2026-02-21T03:00:00Z"
  },
  "trigger": {
    "type": "task_intent",
    "conditions": [
      {
        "field": "task.type",
        "operator": "in",
        "value": [
          "read_notion",
          "notion_read"
        ]
      }
    ]
  },
  "input_schema": {
    "required_params": [
      {
        "name": "page_id",
        "type": "string",
        "description": "Notion page ID"
      },
      {
        "name": "api_key",
        "type": "string",
        "description": "Notion integration API key"
      }
    ]
  },
  "output_schema": {
    "fields": [
      {
        "name": "title",
        "type": "string",
        "description": "Page title"
      },
      {
        "name": "content",
        "type": "string",
        "description": "Page content as text"
      },
      {
        "name": "blocks",
        "type": "number",
        "description": "Number of blocks"
      }
    ]
  },
  "execution_dag": {
    "nodes": [
      {
        "id": "fetch_page",
        "action": "http_get",
        "params": {
          "url": "https://api.notion.com/v1/pages/{{input.page_id}}",
          "headers": {
            "Authorization": "Bearer {{input.api_key}}",
            "Notion-Version": "2022-06-28"
          },
          "timeout_ms": 10000
        }
      },
      {
        "id": "check_page",
        "action": "condition_check",
        "params": {
          "field": "{{fetch_page.output.status_code}}",
          "operator": "equals",
          "value": 200
        }
      },
      {
        "id": "parse_page",
        "action": "json_parse",
        "params": {
          "input": "{{fetch_page.output.body}}"
        }
      },
      {
        "id": "fetch_blocks",
        "action": "http_get",
        "params": {
          "url": "https://api.notion.com/v1/blocks/{{input.page_id}}/children",
          "headers": {
            "Authorization": "Bearer {{input.api_key}}",
            "Notion-Version": "2022-06-28"
          },
          "timeout_ms": 10000
        }
      },
      {
        "id": "parse_blocks",
        "action": "json_parse",
        "params": {
          "input": "{{fetch_blocks.output.body}}"
        }
      },
      {
        "id": "ret_ok",
        "action": "return_result",
        "params": {
          "title": "{{parse_page.output.data.properties.title}}",
          "content": "{{parse_blocks.output.data.results}}",
          "blocks": "{{parse_blocks.output.data.results.length}}"
        }
      },
      {
        "id": "ret_fail",
        "action": "return_error",
        "params": {
          "error_code": "NOTION_ERROR",
          "message": "Failed to read Notion page"
        }
      }
    ],
    "edges": [
      {
        "from": "fetch_page",
        "to": "check_page"
      },
      {
        "from": "check_page",
        "to": "parse_page",
        "condition": "success"
      },
      {
        "from": "check_page",
        "to": "ret_fail",
        "condition": "failure"
      },
      {
        "from": "parse_page",
        "to": "fetch_blocks"
      },
      {
        "from": "fetch_blocks",
        "to": "parse_blocks"
      },
      {
        "from": "parse_blocks",
        "to": "ret_ok"
      }
    ],
    "entry_node": "fetch_page",
    "exit_node": [
      "ret_ok",
      "ret_fail"
    ]
  },
  "security": {
    "network_whitelist": [
      "api.notion.com"
    ],
    "file_permissions": {
      "read": [],
      "write": []
    },
    "max_execution_time_ms": 30000,
    "max_retries": 2,
    "sandbox_level": "strict",
    "dangerous_patterns": []
  },
  "mcp_compatible": true,
  "required_mcp_capabilities": [
    "http"
  ]
}