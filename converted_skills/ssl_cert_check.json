{
  "jade_version": "1.0.0",
  "skill_id": "ssl_cert_check",
  "metadata": {
    "name": "SSL Certificate Check",
    "version": "1.0.0",
    "description": "Check SSL certificate validity and expiration for a domain",
    "author": "jadegate-community",
    "tags": [
      "ssl",
      "certificate",
      "security",
      "https"
    ],
    "license": "MIT",
    "created_at": "2026-02-21T03:00:00Z",
    "updated_at": "2026-02-21T03:00:00Z"
  },
  "trigger": {
    "type": "task_intent",
    "conditions": [
      {
        "field": "task.type",
        "operator": "in",
        "value": [
          "check_ssl",
          "ssl_check"
        ]
      }
    ]
  },
  "input_schema": {
    "required_params": [
      {
        "name": "domain",
        "type": "string",
        "description": "Domain to check SSL certificate"
      }
    ]
  },
  "output_schema": {
    "fields": [
      {
        "name": "valid",
        "type": "boolean",
        "description": "Certificate is valid"
      },
      {
        "name": "issuer",
        "type": "string",
        "description": "Certificate issuer"
      },
      {
        "name": "expires",
        "type": "string",
        "description": "Expiration date"
      },
      {
        "name": "days_left",
        "type": "number",
        "description": "Days until expiration"
      }
    ]
  },
  "execution_dag": {
    "nodes": [
      {
        "id": "fetch",
        "action": "http_get",
        "params": {
          "url": "https://ssl-checker.io/api/v1/check/{{input.domain}}",
          "timeout_ms": 15000
        }
      },
      {
        "id": "check",
        "action": "condition_check",
        "params": {
          "field": "{{fetch.output.status_code}}",
          "operator": "equals",
          "value": 200
        }
      },
      {
        "id": "parse",
        "action": "json_parse",
        "params": {
          "input": "{{fetch.output.body}}"
        }
      },
      {
        "id": "ret_ok",
        "action": "return_result",
        "params": {
          "valid": "{{parse.output.data.valid}}",
          "issuer": "{{parse.output.data.issuer}}",
          "expires": "{{parse.output.data.expires}}",
          "days_left": "{{parse.output.data.days_remaining}}"
        }
      },
      {
        "id": "ret_fail",
        "action": "return_error",
        "params": {
          "error_code": "SSL_CHECK_FAILED",
          "message": "Cannot check SSL certificate"
        }
      }
    ],
    "edges": [
      {
        "from": "fetch",
        "to": "check"
      },
      {
        "from": "check",
        "to": "parse",
        "condition": "success"
      },
      {
        "from": "check",
        "to": "ret_fail",
        "condition": "failure"
      },
      {
        "from": "parse",
        "to": "ret_ok"
      }
    ],
    "entry_node": "fetch",
    "exit_node": [
      "ret_ok",
      "ret_fail"
    ]
  },
  "security": {
    "network_whitelist": [
      "ssl-checker.io"
    ],
    "file_permissions": {
      "read": [],
      "write": []
    },
    "max_execution_time_ms": 30000,
    "max_retries": 2,
    "sandbox_level": "strict",
    "dangerous_patterns": []
  },
  "mcp_compatible": true,
  "required_mcp_capabilities": [
    "http"
  ]
}