    "type": "task_intent",
    "conditions": [
      {
        "field": "task.type",
        "operator": "in",
        "value": [
          "text_word_count"
        ]
      }
    ]
  },
  "input_schema": {
    "required_params": [
      {
        "name": "text",
        "type": "string",
        "description": "Text to analyze"
      }
    ],
    "optional_params": []
  },
  "output_schema": {
    "fields": [
      {
        "name": "word_count",
        "type": "number",
        "description": "Word count"
      },
      {
        "name": "char_count",
        "type": "number",
        "description": "Character count"
      },
      {
        "name": "status",
        "type": "string",
        "description": "Status"
      }
    ]
  },
  "execution_dag": {
    "nodes": [
      {
        "id": "analyze",
        "action": "analyze",
        "params": {
          "data": "{{input.text}}",
          "metrics": [
            "words",
            "characters",
            "lines"
          ]
        }
      },
      {
        "id": "ret",
        "action": "return_result",
        "params": {
          "word_count": "{{analyze.output.words}}",
          "char_count": "{{analyze.output.characters}}",
          "status": "ok"
        }
      }
    ],
    "edges": [
      {
        "from": "analyze",
        "to": "ret"
      }
    ],
    "entry_node": "analyze",
    "exit_node": [
      "ret"
    ]
