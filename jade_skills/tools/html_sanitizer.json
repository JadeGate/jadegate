{
  "jade_version": "1.0.0",
  "skill_id": "html_sanitizer",
  "metadata": {
    "name": "HTML Sanitizer",
    "version": "1.0.0",
    "description": "Sanitize HTML input by removing dangerous tags and attributes.",
    "author": "jadegate",
    "tags": [
      "html",
      "sanitize",
      "security",
      "xss"
    ],
    "license": "BSL-1.1",
    "created_at": "2026-02-22T17:50:21Z",
    "updated_at": "2026-02-22T17:50:21Z"
  },
  "trigger": {
    "type": "task_intent",
    "conditions": [
      {
        "field": "task.type",
        "operator": "in",
        "value": [
          "html_sanitizer"
        ]
      }
    ]
  },
  "input_schema": {
    "required_params": [
      {
        "name": "html_content",
        "type": "string",
        "description": "HTML string to sanitize"
      }
    ],
    "optional_params": []
  },
  "output_schema": {
    "fields": [
      {
        "name": "clean_html",
        "type": "string",
        "description": "Sanitized HTML"
      },
      {
        "name": "status",
        "type": "string",
        "description": "Status"
      }
    ]
  },
  "execution_dag": {
    "nodes": [
      {
        "id": "sanitize",
        "action": "text_sanitize",
        "params": {
          "data": "{{input.html_content}}",
          "mode": "html"
        }
      },
      {
        "id": "ret",
        "action": "return_result",
        "params": {
          "clean_html": "{{sanitize.output.value}}",
          "status": "ok"
        }
      }
    ],
    "edges": [
      {
        "from": "sanitize",
        "to": "ret"
      }
    ],
    "entry_node": "sanitize",
    "exit_node": [
      "ret"
    ]
  },
  "security": {
    "network_whitelist": [],
    "file_permissions": {
      "read": [],
      "write": []
    },
    "max_execution_time_ms": 10000,
    "max_retries": 1,
    "sandbox_level": "strict",
    "dangerous_patterns": []
  },
