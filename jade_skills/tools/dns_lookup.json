{
  "jade_version": "1.0.0",
  "skill_id": "dns_lookup",
  "metadata": {
    "name": "DNS Lookup",
    "version": "1.0.0",
    "description": "Resolve domain name to IP addresses using DNS",
    "author": "jadegate-community",
    "tags": [
      "dns",
      "lookup",
      "network",
      "resolve"
    ],
    "license": "BSL-1.1",
    "created_at": "2026-02-21T03:00:00Z",
    "updated_at": "2026-02-21T03:00:00Z"
  },
  "trigger": {
    "type": "task_intent",
    "conditions": [
      {
        "field": "task.type",
        "operator": "in",
        "value": [
          "dns_lookup",
          "resolve_domain"
        ]
      }
    ]
  },
  "input_schema": {
    "required_params": [
      {
        "name": "domain",
        "type": "string",
        "description": "Domain to resolve"
      }
    ]
  },
  "output_schema": {
    "fields": [
      {
        "name": "ip_addresses",
        "type": "array",
        "description": "Resolved IPs"
      },
      {
        "name": "domain",
        "type": "string",
        "description": "Queried domain"
      }
    ]
  },
  "execution_dag": {
    "nodes": [
      {
        "id": "resolve",
        "action": "dns_resolve",
        "params": {
          "domain": "{{input.domain}}"
        }
      },
      {
        "id": "check",
        "action": "condition_check",
        "params": {
          "field": "{{resolve.output.ip_addresses}}",
          "operator": "exists",
          "value": true
        }
      },
      {
        "id": "ret_ok",
        "action": "return_result",
        "params": {
          "ip_addresses": "{{resolve.output.ip_addresses}}",
          "domain": "{{input.domain}}"
        }
      },
      {
        "id": "ret_fail",
        "action": "return_error",
        "params": {
          "error_code": "DNS_FAILED",
          "message": "Could not resolve domain"
        }
      }
    ],
    "edges": [
      {
        "from": "resolve",
        "to": "check"
      },
      {
        "from": "check",
        "to": "ret_ok",
        "condition": "success"
      },
      {
        "from": "check",
        "to": "ret_fail",
        "condition": "failure"
      }
    ],
    "entry_node": "resolve",
    "exit_node": [
      "ret_ok",
      "ret_fail"
    ]
  },
  "security": {
    "network_whitelist": [],
    "file_permissions": {
      "read": [],
      "write": []
    },
    "max_execution_time_ms": 30000,
    "max_retries": 2,
    "sandbox_level": "strict",
    "dangerous_patterns": []
  },
  "mcp_compatible": true,
  "required_mcp_capabilities": [
    "dns"
  ],
  "jade_signature": {
    "version": "1.0.0",
    "skill_id": "dns_lookup",
