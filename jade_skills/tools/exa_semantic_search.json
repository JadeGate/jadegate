{
  "jade_version": "1.0.0",
  "skill_id": "exa_semantic_search",
  "metadata": {
    "name": "Exa AI Semantic Search",
    "version": "1.0.0",
    "description": "Search the web semantically using Exa AI API with neural search",
    "author": "jadegate-community",
    "tags": [
      "search",
      "semantic",
      "exa",
      "neural"
    ],
    "license": "BSL-1.1",
    "created_at": "2026-02-21T03:00:00Z",
    "updated_at": "2026-02-21T03:00:00Z"
  },
  "trigger": {
    "type": "task_intent",
    "conditions": [
      {
        "field": "task.type",
        "operator": "in",
        "value": [
          "exa_search",
          "semantic_search"
        ]
      }
    ]
  },
  "input_schema": {
    "required_params": [
      {
        "name": "query",
        "type": "string",
        "description": "Natural language search query"
      },
      {
        "name": "api_key",
        "type": "string",
        "description": "Exa API key"
      }
    ]
  },
  "output_schema": {
    "fields": [
      {
        "name": "results",
        "type": "array",
        "description": "Search results with title, url, text"
      },
      {
        "name": "total",
        "type": "number",
        "description": "Results count"
      }
    ]
  },
  "execution_dag": {
    "nodes": [
      {
        "id": "search",
        "action": "http_post",
        "params": {
          "url": "https://api.exa.ai/search",
          "headers": {
            "x-api-key": "{{input.api_key}}",
            "Content-Type": "application/json"
          },
          "body": {
            "query": "{{input.query}}",
            "num_results": 5,
            "type": "neural"
          },
          "timeout_ms": 15000
        }
      },
      {
        "id": "check",
        "action": "condition_check",
        "params": {
          "field": "{{search.output.status_code}}",
          "operator": "equals",
          "value": 200
        }
      },
      {
        "id": "parse",
        "action": "json_parse",
        "params": {
          "input": "{{search.output.body}}"
        }
      },
      {
        "id": "extract",
        "action": "json_extract",
        "params": {
          "data": "{{parse.output.data}}",
          "path": "$.results"
        }
      },
      {
        "id": "ret_ok",
        "action": "return_result",
        "params": {
          "results": "{{extract.output.value}}",
          "total": "{{extract.output.count}}"
        }
      },
      {
        "id": "ret_fail",
        "action": "return_error",
        "params": {
          "error_code": "EXA_FAILED",
          "message": "Exa API request failed"
        }
      }
    ],
    "edges": [
      {
        "from": "search",
        "to": "check"
      },
      {
        "from": "check",
        "to": "parse",
        "condition": "success"
      },
      {
        "from": "check",
        "to": "ret_fail",
        "condition": "failure"
      },
      {
        "from": "parse",
        "to": "extract"
      },
      {
        "from": "extract",
        "to": "ret_ok"
      }
    ],
    "entry_node": "search",
    "exit_node": [
      "ret_ok",
      "ret_fail"
    ]
  },
  "security": {
    "network_whitelist": [
      "api.exa.ai"
    ],
    "file_permissions": {
      "read": [],
      "write": []
    },
    "max_execution_time_ms": 30000,
    "max_retries": 2,
    "sandbox_level": "strict",
    "dangerous_patterns": []
  },
  "mcp_compatible": true,
  "required_mcp_capabilities": [
    "http"
  ],
