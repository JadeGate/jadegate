{
  "jade_version": "1.0.0",
  "metadata": {
    "version": "1.0.0",
    "author": "jadegate-official",
    "name": "ChromaDB Collection Query",
    "description": "Query a ChromaDB collection",
    "tags": [
      "chromadb",
      "vector",
      "embeddings"
    ]
  },
  "trigger": {
    "type": "task_intent",
    "conditions": [
      {
        "field": "task.type",
        "operator": "in",
        "value": [
          "mcp_chromadb_query"
        ]
      }
    ]
  },
  "security": {
    "sandbox_level": "standard",
    "max_execution_time_ms": 15000,
    "max_retries": 3,
    "file_permissions": {
      "read": [],
      "write": []
    },
    "network_whitelist": [
      "localhost"
    ]
  },
  "skill_id": "mcp_chromadb_query",
  "input_schema": {
    "required_params": [
      {
        "name": "collection",
        "type": "string",
        "description": "Collection name"
      },
      {
        "name": "query_text",
        "type": "string",
        "description": "Query text"
      }
    ],
    "optional_params": []
  },
  "output_schema": {
    "fields": [
      {
        "name": "documents",
        "type": "array",
        "description": "Matching documents"
      }
    ]
  },
  "execution_dag": {
    "nodes": [
      {
        "id": "chromadb_query",
        "type": "mcp_call",
        "action": "chromadb_query",
        "params": {
          "url": "http://localhost:8000/api/v1/collections/{{input.collection}}/query",
          "method": "POST",
          "headers": {
            "Content-Type": "application/json"
          }
        }
      }
    ],
    "edges": [],
    "entry_node": "chromadb_query",
    "exit_node": "chromadb_query"
  },
  "mcp_compatible": true,
  "required_mcp_capabilities": [
    "chromadb"
  ]
}