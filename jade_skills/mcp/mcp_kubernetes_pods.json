{
  "jade_version": "1.0.0",
  "skill_id": "mcp_kubernetes_pods",
  "metadata": {
    "name": "MCP Kubernetes Pods",
    "version": "1.0.0",
    "description": "List pods in a Kubernetes namespace.",
    "author": "jade-mcp-bridge",
    "tags": [
      "mcp",
      "kubernetes",
      "k8s",
      "pods",
      "container"
    ],
    "license": "BSL-1.1",
    "created_at": "2026-02-22T17:49:27Z",
    "updated_at": "2026-02-22T17:49:27Z"
  },
  "trigger": {
    "type": "task_intent",
    "conditions": [
      {
        "field": "task.type",
        "operator": "in",
        "value": [
          "mcp_kubernetes_pods"
        ]
      }
    ]
  },
  "input_schema": {
    "required_params": [
      {
        "name": "cluster",
        "type": "string",
        "description": "Kubernetes API server host"
      },
      {
        "name": "namespace",
        "type": "string",
        "description": "Namespace"
      }
    ],
    "optional_params": []
  },
  "output_schema": {
    "fields": [
      {
        "name": "results",
        "type": "array",
        "description": "Pods"
      },
      {
        "name": "status",
        "type": "string",
        "description": "Status"
      }
    ]
  },
  "execution_dag": {
    "nodes": [
      {
        "id": "fetch",
        "action": "http_get",
        "params": {
          "url": "https://{{input.cluster}}/api/v1/namespaces/{{input.namespace}}/pods",
          "headers": {
            "Authorization": "Bearer {{env.K8S_TOKEN}}"
          }
        }
      },
      {
        "id": "chk",
        "action": "condition_check",
        "params": {
          "field": "{{fetch.output.status_code}}",
          "operator": "equals",
          "value": 200
        }
      },
      {
        "id": "ext",
        "action": "json_extract",
        "params": {
          "data": "{{fetch.output.body}}",
          "path": "$.items[*]",
          "fields": [
            "metadata",
            "status",
            "spec"
          ]
        }
      },
      {
        "id": "ret",
        "action": "return_result",
        "params": {
          "results": "{{ext.output.value}}",
          "status": "ok"
        }
      }
    ],
    "edges": [
      {
        "from": "fetch",
        "to": "chk"
      },
      {
        "from": "chk",
        "to": "ext"
      },
      {
        "from": "ext",
        "to": "ret"
      }
    ],
    "entry_node": "fetch",
    "exit_node": [
      "ret"
    ]
  },
  "security": {
    "network_whitelist": [
      "kubernetes.default.svc"
    ],
    "file_permissions": {
      "read": [],
      "write": []
    },
    "max_execution_time_ms": 15000,
    "max_retries": 1,
    "sandbox_level": "standard",
    "dangerous_patterns": [],
    "env_whitelist": [
      "K8S_TOKEN"
    ]
  },
  "mcp_compatible": true,
  "required_mcp_capabilities": [
    "kubernetes"
  ],
