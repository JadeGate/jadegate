{
  "jade_version": "1.0.0",
  "skill_id": "mcp_brave_search",
  "metadata": {
    "name": "MCP Brave Search",
    "version": "1.0.0",
    "description": "Search the web using Brave Search API via MCP brave-search server.",
    "author": "jade-mcp-bridge",
    "tags": [
      "mcp",
      "brave",
      "search",
      "web"
    ],
    "license": "BSL-1.1",
    "created_at": "2026-02-21T00:00:00Z",
    "updated_at": "2026-02-21T00:00:00Z"
  },
  "trigger": {
    "type": "task_intent",
    "conditions": [
      {
        "field": "task.type",
        "operator": "in",
        "value": [
          "mcp_brave_search"
        ]
      }
    ]
  },
  "input_schema": {
    "required_params": [
      {
        "name": "query",
        "type": "string",
        "description": "Search query"
      }
    ],
    "optional_params": [
      {
        "name": "count",
        "type": "number",
        "description": "Number of results",
        "default": 10
      }
    ]
  },
  "output_schema": {
    "fields": [
      {
        "name": "results",
        "type": "array",
        "description": "Search results"
      },
      {
        "name": "query",
        "type": "string",
        "description": "Original query"
      }
    ]
  },
  "execution_dag": {
    "nodes": [
      {
        "id": "search",
        "action": "http_get",
        "params": {
          "url": "https://api.search.brave.com/res/v1/web/search?q={{input.query}}&count={{input.count | default:10}}",
          "headers": {
            "Accept": "application/json",
            "X-Subscription-Token": "{{env.BRAVE_API_KEY}}"
          },
          "timeout_ms": 10000
        }
      },
      {
        "id": "check_ok",
        "action": "condition_check",
        "params": {
          "field": "{{search.output.status_code}}",
          "operator": "equals",
          "value": 200
        }
      },
      {
        "id": "extract",
        "action": "json_extract",
        "params": {
          "data": "{{search.output.body}}",
          "path": "$.web.results[*]",
          "fields": [
            "title",
            "url",
            "description"
          ]
        }
      },
      {
        "id": "return_results",
        "action": "return_result",
        "params": {
          "results": "{{extract.output.value}}",
          "query": "{{input.query}}"
        }
      }
    ],
    "edges": [
      {
        "from": "search",
        "to": "check_ok"
      },
      {
        "from": "check_ok",
        "to": "extract"
      },
      {
        "from": "extract",
        "to": "return_results"
      }
    ],
    "entry_node": "search",
    "exit_node": [
      "return_results"
    ]
  },
  "security": {
    "network_whitelist": [
      "api.search.brave.com"
    ],
    "file_permissions": {
      "read": [],
      "write": []
    },
    "max_execution_time_ms": 15000,
    "max_retries": 1,
    "sandbox_level": "standard",
    "dangerous_patterns": []
  },
  "mcp_compatible": true,
  "required_mcp_capabilities": [
    "brave-search"
  ],
  "jade_signature": {
    "version": "1.0.0",
