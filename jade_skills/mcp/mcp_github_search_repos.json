{
  "jade_version": "1.0.0",
  "skill_id": "mcp_github_search_repos",
  "metadata": {
    "name": "MCP GitHub Search Repositories",
    "version": "1.0.0",
    "description": "Search GitHub repositories via MCP GitHub server.",
    "author": "jade-mcp-bridge",
    "tags": [
      "mcp",
      "github",
      "search",
      "repository"
    ],
    "license": "BSL-1.1",
    "created_at": "2026-02-21T00:00:00Z",
    "updated_at": "2026-02-21T00:00:00Z"
  },
  "trigger": {
    "type": "task_intent",
    "conditions": [
      {
        "field": "task.type",
        "operator": "in",
        "value": [
          "mcp_github_search_repos"
        ]
      }
    ]
  },
  "input_schema": {
    "required_params": [
      {
        "name": "query",
        "type": "string",
        "description": "Search query"
      }
    ],
    "optional_params": [
      {
        "name": "sort",
        "type": "string",
        "description": "Sort by (stars/forks/updated)",
        "default": "stars"
      },
      {
        "name": "limit",
        "type": "number",
        "description": "Max results",
        "default": 10
      }
    ]
  },
  "output_schema": {
    "fields": [
      {
        "name": "total_count",
        "type": "number",
        "description": "Total matching repos"
      },
      {
        "name": "repos",
        "type": "array",
        "description": "Repository list"
      }
    ]
  },
  "execution_dag": {
    "nodes": [
      {
        "id": "search",
        "action": "http_get",
        "params": {
          "url": "https://api.github.com/search/repositories?q={{input.query}}&sort={{input.sort | default:\"stars\"}}&per_page={{input.limit | default:10}}",
          "headers": {
            "Accept": "application/vnd.github.v3+json"
          }
        }
      },
      {
        "id": "check_ok",
        "action": "condition_check",
        "params": {
          "field": "{{search.output.status_code}}",
          "operator": "equals",
          "value": 200
        }
      },
      {
        "id": "extract",
        "action": "json_extract",
        "params": {
          "data": "{{search.output.body}}",
          "path": "$.items[*]",
          "fields": [
            "full_name",
            "description",
            "stargazers_count",
            "html_url",
            "language"
          ]
        }
      },
      {
        "id": "return_results",
        "action": "return_result",
        "params": {
          "total_count": "{{search.output.body.total_count}}",
          "repos": "{{extract.output.value}}"
        }
      }
    ],
    "edges": [
      {
        "from": "search",
        "to": "check_ok"
      },
      {
        "from": "check_ok",
        "to": "extract"
      },
      {
        "from": "extract",
        "to": "return_results"
      }
    ],
    "entry_node": "search",
    "exit_node": [
      "return_results"
    ]
  },
  "security": {
    "network_whitelist": [
      "api.github.com"
    ],
    "file_permissions": {
      "read": [],
      "write": []
    },
    "max_execution_time_ms": 15000,
    "max_retries": 1,
    "sandbox_level": "standard",
    "dangerous_patterns": []
  },
  "mcp_compatible": true,
  "required_mcp_capabilities": [
    "github"
  ],
