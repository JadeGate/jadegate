{
  "jade_version": "1.0.0",
  "metadata": {
    "version": "1.0.0",
    "author": "jadegate-official",
    "name": "GitHub Actions Trigger Workflow",
    "description": "Trigger a GitHub Actions workflow dispatch",
    "tags": [
      "github",
      "ci",
      "actions"
    ]
  },
  "trigger": {
    "type": "task_intent",
    "conditions": [
      {
        "field": "task.type",
        "operator": "in",
        "value": [
          "mcp_github_actions_trigger"
        ]
      }
    ]
  },
  "security": {
    "sandbox_level": "standard",
    "max_execution_time_ms": 15000,
    "max_retries": 3,
    "file_permissions": {
      "read": [],
      "write": []
    },
    "network_whitelist": [
      "api.github.com"
    ]
  },
  "skill_id": "mcp_github_actions_trigger",
  "input_schema": {
    "required_params": [
      {
        "name": "repo",
        "type": "string",
        "description": "Repository (owner/repo)"
      },
      {
        "name": "workflow_id",
        "type": "string",
        "description": "Workflow file name or ID"
      }
    ],
    "optional_params": []
  },
  "output_schema": {
    "fields": [
      {
        "name": "status",
        "type": "string",
        "description": "Trigger status"
      }
    ]
  },
  "execution_dag": {
    "nodes": [
      {
        "id": "github_actions_trigger",
        "type": "mcp_call",
        "action": "github_actions_trigger",
        "params": {
          "url": "https://api.github.com/repos/{{input.repo}}/actions/workflows/{{input.workflow_id}}/dispatches",
          "method": "POST",
          "headers": {
            "Content-Type": "application/json"
          }
        }
      }
    ],
    "edges": [],
    "entry_node": "github_actions_trigger",
    "exit_node": "github_actions_trigger"
  },
  "mcp_compatible": true,
  "required_mcp_capabilities": [
    "github"
  ]
}