{
  "jade_version": "1.0.0",
  "skill_id": "mcp_twitch_streams",
  "metadata": {
    "name": "MCP Twitch Streams",
    "version": "1.0.0",
    "description": "List live streams on Twitch.",
    "author": "jade-mcp-bridge",
    "tags": [
      "mcp",
      "twitch",
      "streams",
      "gaming"
    ],
    "license": "BSL-1.1",
    "created_at": "2026-02-22T17:49:27Z",
    "updated_at": "2026-02-22T17:49:27Z"
  },
  "trigger": {
    "type": "task_intent",
    "conditions": [
      {
        "field": "task.type",
        "operator": "in",
        "value": [
          "mcp_twitch_streams"
        ]
      }
    ]
  },
  "input_schema": {
    "required_params": [],
    "optional_params": [
      {
        "name": "game_id",
        "type": "string",
        "description": "Filter by game ID"
      },
      {
        "name": "limit",
        "type": "number",
        "description": "Max results",
        "default": 20
      }
    ]
  },
  "output_schema": {
    "fields": [
      {
        "name": "results",
        "type": "array",
        "description": "Live streams"
      },
      {
        "name": "status",
        "type": "string",
        "description": "Status"
      }
    ]
  },
  "execution_dag": {
    "nodes": [
      {
        "id": "search",
        "action": "http_get",
        "params": {
          "url": "https://api.twitch.tv/helix/streams?game_id={{input.game_id}}&first={{input.limit}}",
          "headers": {
            "Authorization": "Bearer {{env.TWITCH_TOKEN}}",
            "Client-Id": "{{env.TWITCH_CLIENT_ID}}"
          }
        }
      },
      {
        "id": "chk",
        "action": "condition_check",
        "params": {
          "field": "{{search.output.status_code}}",
          "operator": "equals",
          "value": 200
        }
      },
      {
        "id": "ext",
        "action": "json_extract",
        "params": {
          "data": "{{search.output.body}}",
          "path": "$.data[*]",
          "fields": [
            "user_name",
            "title",
            "viewer_count",
            "game_name",
            "language",
            "started_at"
          ]
        }
      },
      {
        "id": "ret",
        "action": "return_result",
        "params": {
          "results": "{{ext.output.value}}",
          "status": "ok"
        }
      }
    ],
    "edges": [
      {
        "from": "search",
        "to": "chk"
      },
      {
        "from": "chk",
        "to": "ext"
      },
      {
        "from": "ext",
        "to": "ret"
      }
    ],
    "entry_node": "search",
    "exit_node": [
      "ret"
    ]
  },
  "security": {
    "network_whitelist": [
      "api.twitch.tv"
    ],
    "file_permissions": {
      "read": [],
      "write": []
    },
    "max_execution_time_ms": 15000,
    "max_retries": 1,
    "sandbox_level": "standard",
    "dangerous_patterns": [],
    "env_whitelist": [
      "TWITCH_TOKEN",
      "TWITCH_CLIENT_ID"
    ]
  },
  "mcp_compatible": true,
  "required_mcp_capabilities": [
    "twitch"
  ],
