{
  "jade_version": "1.0.0",
  "skill_id": "mcp_memory_store",
  "metadata": {
    "name": "MCP Memory Store",
    "version": "1.0.0",
    "description": "Store a knowledge entity in the MCP memory server knowledge graph.",
    "author": "jade-mcp-bridge",
    "tags": [
      "mcp",
      "memory",
      "knowledge",
      "store",
      "graph"
    ],
    "license": "BSL-1.1",
    "created_at": "2026-02-21T00:00:00Z",
    "updated_at": "2026-02-21T00:00:00Z"
  },
  "trigger": {
    "type": "task_intent",
    "conditions": [
      {
        "field": "task.type",
        "operator": "in",
        "value": [
          "mcp_memory_store"
        ]
      }
    ]
  },
  "input_schema": {
    "required_params": [
      {
        "name": "entity",
        "type": "object",
        "description": "Entity with name, type, observations"
      }
    ],
    "optional_params": []
  },
  "output_schema": {
    "fields": [
      {
        "name": "stored",
        "type": "boolean",
        "description": "Whether store succeeded"
      },
      {
        "name": "entity_name",
        "type": "string",
        "description": "Stored entity name"
      }
    ]
  },
  "execution_dag": {
    "nodes": [
      {
        "id": "validate_entity",
        "action": "data_transform",
        "params": {
          "data": "{{input.entity}}",
          "required_fields": [
            "name",
            "type"
          ]
        }
      },
      {
        "id": "store",
        "action": "kv_store",
        "params": {
          "name": "{{input.entity.name}}",
          "type": "{{input.entity.type}}",
          "observations": "{{input.entity.observations | default:[]}}"
        }
      },
      {
        "id": "return_ok",
        "action": "return_result",
        "params": {
          "stored": true,
          "entity_name": "{{input.entity.name}}"
        }
      }
    ],
    "edges": [
      {
        "from": "validate_entity",
        "to": "store"
      },
      {
        "from": "store",
        "to": "return_ok"
      }
    ],
    "entry_node": "validate_entity",
    "exit_node": [
      "return_ok"
    ]
  },
  "security": {
    "network_whitelist": [],
    "file_permissions": {
      "read": [],
      "write": []
    },
    "max_execution_time_ms": 5000,
    "max_retries": 1,
    "sandbox_level": "strict",
    "dangerous_patterns": []
  },
  "mcp_compatible": true,
  "required_mcp_capabilities": [
    "memory"
  ],
  "jade_signature": {
