{
  "jade_version": "1.0.0",
  "skill_id": "mcp_clickhouse_query",
  "metadata": {
    "name": "MCP ClickHouse Query",
    "version": "1.0.0",
    "description": "Execute SQL queries on ClickHouse.",
    "author": "jade-mcp-bridge",
    "tags": [
      "mcp",
      "clickhouse",
      "sql",
      "analytics",
      "database"
    ],
    "license": "BSL-1.1",
    "created_at": "2026-02-22T17:49:27Z",
    "updated_at": "2026-02-22T17:49:27Z"
  },
  "trigger": {
    "type": "task_intent",
    "conditions": [
      {
        "field": "task.type",
        "operator": "in",
        "value": [
          "mcp_clickhouse_query"
        ]
      }
    ]
  },
  "input_schema": {
    "required_params": [
      {
        "name": "host",
        "type": "string",
        "description": "ClickHouse server host"
      },
      {
        "name": "sql",
        "type": "string",
        "description": "SQL query"
      }
    ],
    "optional_params": []
  },
  "output_schema": {
    "fields": [
      {
        "name": "results",
        "type": "string",
        "description": "Query results"
      },
      {
        "name": "status",
        "type": "string",
        "description": "Status"
      }
    ]
  },
  "execution_dag": {
    "nodes": [
      {
        "id": "query",
        "action": "http_post",
        "params": {
          "url": "https://{{input.host}}:8443/?query={{input.sql}}",
          "headers": {
            "Authorization": "Bearer {{env.CLICKHOUSE_TOKEN}}"
          }
        }
      },
      {
        "id": "chk",
        "action": "condition_check",
        "params": {
          "field": "{{query.output.status_code}}",
          "operator": "equals",
          "value": 200
        }
      },
      {
        "id": "ret",
        "action": "return_result",
        "params": {
          "results": "{{query.output.body}}",
          "status": "ok"
        }
      }
    ],
    "edges": [
      {
        "from": "query",
        "to": "chk"
      },
      {
        "from": "chk",
        "to": "ret"
      }
    ],
    "entry_node": "query",
    "exit_node": [
      "ret"
    ]
  },
  "security": {
    "network_whitelist": [
      "clickhouse.local"
    ],
    "file_permissions": {
      "read": [],
      "write": []
    },
    "max_execution_time_ms": 15000,
    "max_retries": 1,
    "sandbox_level": "standard",
    "dangerous_patterns": [],
    "env_whitelist": [
      "CLICKHOUSE_TOKEN"
    ]
  },
  "mcp_compatible": true,
  "required_mcp_capabilities": [
    "clickhouse"
  ],
  "jade_signature": {
    "version": "1.0.0",
