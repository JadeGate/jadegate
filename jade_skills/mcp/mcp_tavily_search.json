{
  "jade_version": "1.0.0",
  "skill_id": "mcp_tavily_search",
  "metadata": {
    "name": "MCP Tavily AI Search",
    "version": "1.0.0",
    "description": "AI-powered web search via Tavily.",
    "author": "jade-mcp-bridge",
    "tags": [
      "mcp",
      "tavily",
      "search",
      "ai"
    ],
    "license": "BSL-1.1",
    "created_at": "2026-02-21T00:00:00Z",
    "updated_at": "2026-02-21T00:00:00Z"
  },
  "trigger": {
    "type": "task_intent",
    "conditions": [
      {
        "field": "task.type",
        "operator": "in",
        "value": [
          "mcp_tavily_search"
        ]
      }
    ]
  },
  "input_schema": {
    "required_params": [
      {
        "name": "query",
        "type": "string",
        "description": "Search query"
      }
    ],
    "optional_params": [
      {
        "name": "max_results",
        "type": "number",
        "description": "Max results",
        "default": 5
      }
    ]
  },
  "output_schema": {
    "fields": [
      {
        "name": "results",
        "type": "array",
        "description": "Search results"
      }
    ]
  },
  "execution_dag": {
    "nodes": [
      {
        "id": "search",
        "action": "http_post",
        "params": {
          "url": "https://api.tavily.com/search",
          "body": {
            "api_key": "{{env.TAVILY_API_KEY}}",
            "query": "{{input.query}}",
            "max_results": "{{input.max_results | default:5}}"
          },
          "timeout_ms": 15000
        }
      },
      {
        "id": "check",
        "action": "condition_check",
        "params": {
          "field": "{{search.output.status_code}}",
          "operator": "equals",
          "value": 200
        }
      },
      {
        "id": "extract",
        "action": "json_extract",
        "params": {
          "data": "{{search.output.body}}",
          "path": "$.results[*]",
          "fields": [
            "title",
            "url",
            "content"
          ]
        }
      },
      {
        "id": "ret",
        "action": "return_result",
        "params": {
          "results": "{{extract.output.value}}"
        }
      }
    ],
    "edges": [
      {
        "from": "search",
        "to": "check"
      },
      {
        "from": "check",
        "to": "extract"
      },
      {
        "from": "extract",
        "to": "ret"
      }
    ],
    "entry_node": "search",
    "exit_node": [
      "ret"
    ]
  },
  "security": {
    "network_whitelist": [
      "api.tavily.com"
    ],
    "file_permissions": {
      "read": [],
      "write": []
    },
    "max_execution_time_ms": 15000,
    "max_retries": 1,
    "sandbox_level": "standard",
    "dangerous_patterns": []
  },
  "mcp_compatible": true,
  "required_mcp_capabilities": [
    "tavily"
  ]
}