{
  "jade_version": "1.0.0",
  "skill_id": "mcp_email_read",
  "metadata": {
    "name": "MCP Email Read (IMAP)",
    "version": "1.0.0",
    "description": "Read recent emails via IMAP.",
    "author": "jade-mcp-bridge",
    "tags": [
      "mcp",
      "email",
      "imap",
      "read"
    ],
    "license": "BSL-1.1",
    "created_at": "2026-02-21T00:00:00Z",
    "updated_at": "2026-02-21T00:00:00Z"
  },
  "trigger": {
    "type": "task_intent",
    "conditions": [
      {
        "field": "task.type",
        "operator": "in",
        "value": [
          "mcp_email_read"
        ]
      }
    ]
  },
  "input_schema": {
    "required_params": [],
    "optional_params": [
      {
        "name": "folder",
        "type": "string",
        "description": "IMAP folder",
        "default": "INBOX"
      },
      {
        "name": "limit",
        "type": "number",
        "description": "Max emails",
        "default": 10
      }
    ]
  },
  "output_schema": {
    "fields": [
      {
        "name": "messages",
        "type": "array",
        "description": "Email list"
      }
    ]
  },
  "execution_dag": {
    "nodes": [
      {
        "id": "fetch",
        "action": "http_post",
        "params": {
          "url": "{{env.EMAIL_PROXY_URL}}/read",
          "body": {
            "folder": "{{input.folder | default:INBOX}}",
            "limit": "{{input.limit | default:10}}"
          },
          "timeout_ms": 15000
        }
      },
      {
        "id": "check",
        "action": "condition_check",
        "params": {
          "field": "{{fetch.output.status_code}}",
          "operator": "equals",
          "value": 200
        }
      },
      {
        "id": "extract",
        "action": "json_extract",
        "params": {
          "data": "{{fetch.output.body}}",
          "path": "$.messages[*]",
          "fields": [
            "subject",
            "from",
            "date",
            "snippet"
          ]
        }
      },
      {
        "id": "ret",
        "action": "return_result",
        "params": {
          "messages": "{{extract.output.value}}"
        }
      }
    ],
    "edges": [
      {
        "from": "fetch",
        "to": "check"
      },
      {
        "from": "check",
        "to": "extract"
      },
      {
        "from": "extract",
        "to": "ret"
      }
    ],
    "entry_node": "fetch",
    "exit_node": [
      "ret"
    ]
  },
  "security": {
    "network_whitelist": [],
    "file_permissions": {
      "read": [],
      "write": []
    },
    "max_execution_time_ms": 15000,
    "max_retries": 1,
    "sandbox_level": "standard",
    "dangerous_patterns": []
  },
  "mcp_compatible": true,
  "required_mcp_capabilities": [
    "email"
  ],
