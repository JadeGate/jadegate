  "skill_id": "mcp_openai_chat",
  "input_schema": {
    "required_params": [
      {
        "name": "prompt",
        "type": "string",
        "description": "User prompt"
      }
    ],
    "optional_params": []
  },
  "output_schema": {
    "fields": [
      {
        "name": "response",
        "type": "string",
        "description": "GPT response"
      }
    ]
  },
  "execution_dag": {
    "nodes": [
      {
        "id": "openai_chat",
        "type": "mcp_call",
        "action": "openai_chat",
        "params": {
          "url": "https://api.openai.com/v1/chat/completions",
