{
  "jade_version": "1.0.0",
  "skill_id": "mcp_gcp_bigquery",
  "metadata": {
    "name": "MCP GCP BigQuery",
    "version": "1.0.0",
    "description": "Run SQL queries on Google BigQuery.",
    "author": "jade-mcp-bridge",
    "tags": [
      "mcp",
      "gcp",
      "bigquery",
      "sql",
      "database"
    ],
    "license": "BSL-1.1",
    "created_at": "2026-02-22T17:49:27Z",
    "updated_at": "2026-02-22T17:49:27Z"
  },
  "trigger": {
    "type": "task_intent",
    "conditions": [
      {
        "field": "task.type",
        "operator": "in",
        "value": [
          "mcp_gcp_bigquery"
        ]
      }
    ]
  },
  "input_schema": {
    "required_params": [
      {
        "name": "project",
        "type": "string",
        "description": "GCP project ID"
      },
      {
        "name": "sql",
        "type": "string",
        "description": "SQL query"
      }
    ],
    "optional_params": []
  },
  "output_schema": {
    "fields": [
      {
        "name": "results",
        "type": "array",
        "description": "Query results"
      },
      {
        "name": "status",
        "type": "string",
        "description": "Status"
      }
    ]
  },
  "execution_dag": {
    "nodes": [
      {
        "id": "query",
        "action": "http_post",
        "params": {
          "url": "https://bigquery.googleapis.com/bigquery/v2/projects/{{input.project}}/queries",
          "headers": {
            "Authorization": "Bearer {{env.GCP_TOKEN}}",
            "Content-Type": "application/json"
          },
          "body": {
            "query": "{{input.sql}}",
            "useLegacySql": false
          }
        }
      },
      {
        "id": "chk",
        "action": "condition_check",
        "params": {
          "field": "{{query.output.status_code}}",
          "operator": "equals",
          "value": 200
        }
      },
      {
        "id": "ext",
        "action": "json_extract",
        "params": {
          "data": "{{query.output.body}}",
          "path": "$.rows[*]"
        }
      },
      {
        "id": "ret",
        "action": "return_result",
        "params": {
          "results": "{{ext.output.value}}",
          "status": "ok"
        }
      }
    ],
    "edges": [
      {
        "from": "query",
        "to": "chk"
      },
      {
        "from": "chk",
        "to": "ext"
      },
      {
        "from": "ext",
        "to": "ret"
      }
    ],
    "entry_node": "query",
    "exit_node": [
      "ret"
    ]
  },
  "security": {
    "network_whitelist": [
      "bigquery.googleapis.com"
    ],
    "file_permissions": {
      "read": [],
      "write": []
    },
    "max_execution_time_ms": 15000,
    "max_retries": 1,
    "sandbox_level": "standard",
    "dangerous_patterns": [],
    "env_whitelist": [
      "GCP_TOKEN"
    ]
  },
  "mcp_compatible": true,
  "required_mcp_capabilities": [
    "gcp-bigquery"
  ],
