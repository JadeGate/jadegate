{
  "jade_version": "1.0.0",
  "skill_id": "mcp_slack_send",
  "metadata": {
    "name": "MCP Slack Send Message",
    "version": "1.0.0",
    "description": "Send a message to a Slack channel via MCP slack server.",
    "author": "jade-mcp-bridge",
    "tags": [
      "mcp",
      "slack",
      "message",
      "chat"
    ],
    "license": "BSL-1.1",
    "created_at": "2026-02-21T00:00:00Z",
    "updated_at": "2026-02-21T00:00:00Z"
  },
  "trigger": {
    "type": "task_intent",
    "conditions": [
      {
        "field": "task.type",
        "operator": "in",
        "value": [
          "mcp_slack_send"
        ]
      }
    ]
  },
  "input_schema": {
    "required_params": [
      {
        "name": "channel",
        "type": "string",
        "description": "Slack channel ID"
      },
      {
        "name": "text",
        "type": "string",
        "description": "Message text"
      }
    ],
    "optional_params": [
      {
        "name": "thread_ts",
        "type": "string",
        "description": "Thread timestamp for reply",
        "default": ""
      }
    ]
  },
  "output_schema": {
    "fields": [
      {
        "name": "success",
        "type": "boolean",
        "description": "Whether send succeeded"
      },
      {
        "name": "ts",
        "type": "string",
        "description": "Message timestamp"
      },
      {
        "name": "channel",
        "type": "string",
        "description": "Channel sent to"
      }
    ]
  },
  "execution_dag": {
    "nodes": [
      {
        "id": "send",
        "action": "http_post",
        "params": {
          "url": "https://slack.com/api/chat.postMessage",
          "headers": {
            "Authorization": "Bearer {{env.SLACK_TOKEN}}",
            "Content-Type": "application/json"
          },
          "body": {
            "channel": "{{input.channel}}",
            "text": "{{input.text}}",
            "thread_ts": "{{input.thread_ts | default:null}}"
          }
        }
      },
      {
        "id": "check_ok",
        "action": "condition_check",
        "params": {
          "field": "{{send.output.body.ok}}",
          "operator": "equals",
          "value": true
        }
      },
      {
        "id": "return_ok",
        "action": "return_result",
        "params": {
          "success": true,
          "ts": "{{send.output.body.ts}}",
          "channel": "{{input.channel}}"
        }
      }
    ],
    "edges": [
      {
        "from": "send",
        "to": "check_ok"
      },
      {
        "from": "check_ok",
        "to": "return_ok"
      }
    ],
    "entry_node": "send",
    "exit_node": [
      "return_ok"
    ]
  },
  "security": {
    "network_whitelist": [
      "slack.com"
    ],
    "file_permissions": {
      "read": [],
      "write": []
    },
    "max_execution_time_ms": 10000,
    "max_retries": 1,
    "sandbox_level": "standard",
    "dangerous_patterns": []
  },
  "mcp_compatible": true,
  "required_mcp_capabilities": [
    "slack"
  ],
  "jade_signature": {
    "version": "1.0.0",
    "skill_id": "mcp_slack_send",
    "content_hash": "sha256:19d52d4c1805761a2581db49be2d87eb251f523ebc1169ef9418c6351f16f5b5",
