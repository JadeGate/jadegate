{
  "jade_version": "1.0.0",
  "skill_id": "mcp_rss_read",
  "metadata": {
    "name": "MCP RSS Feed Reader",
    "version": "1.0.0",
    "description": "Fetch and parse RSS/Atom feed.",
    "author": "jade-mcp-bridge",
    "tags": [
      "mcp",
      "rss",
      "feed",
      "news"
    ],
    "license": "BSL-1.1",
    "created_at": "2026-02-21T00:00:00Z",
    "updated_at": "2026-02-21T00:00:00Z"
  },
  "trigger": {
    "type": "task_intent",
    "conditions": [
      {
        "field": "task.type",
        "operator": "in",
        "value": [
          "mcp_rss_read"
        ]
      }
    ]
  },
  "input_schema": {
    "required_params": [
      {
        "name": "feed_url",
        "type": "string",
        "description": "RSS/Atom feed URL"
      }
    ],
    "optional_params": []
  },
  "output_schema": {
    "fields": [
      {
        "name": "items",
        "type": "array",
        "description": "Feed items"
      }
    ]
  },
  "execution_dag": {
    "nodes": [
      {
        "id": "fetch",
        "action": "http_get",
        "params": {
          "url": "{{input.feed_url}}",
          "timeout_ms": 10000
        }
      },
      {
        "id": "check",
        "action": "condition_check",
        "params": {
          "field": "{{fetch.output.status_code}}",
          "operator": "equals",
          "value": 200
        }
      },
      {
        "id": "parse",
        "action": "rss_parse",
        "params": {
          "xml": "{{fetch.output.body}}"
        }
      },
      {
        "id": "ret",
        "action": "return_result",
        "params": {
          "items": "{{parse.output.items}}"
        }
      }
    ],
    "edges": [
      {
        "from": "fetch",
        "to": "check"
      },
      {
        "from": "check",
        "to": "parse"
      },
      {
        "from": "parse",
        "to": "ret"
      }
    ],
    "entry_node": "fetch",
    "exit_node": [
      "ret"
    ]
  },
  "security": {
    "network_whitelist": [
      "*"
    ],
    "file_permissions": {
      "read": [],
      "write": []
    },
    "max_execution_time_ms": 15000,
    "max_retries": 1,
    "sandbox_level": "standard",
    "dangerous_patterns": []
  },
  "mcp_compatible": true,
  "required_mcp_capabilities": [
    "rss"
  ]
}