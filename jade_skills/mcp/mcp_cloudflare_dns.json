{
  "jade_version": "1.0.0",
  "skill_id": "mcp_cloudflare_dns",
  "metadata": {
    "name": "MCP Cloudflare DNS List",
    "version": "1.0.0",
    "description": "List DNS records for a Cloudflare zone.",
    "author": "jade-mcp-bridge",
    "tags": [
      "mcp",
      "cloudflare",
      "dns",
      "domain"
    ],
    "license": "BSL-1.1",
    "created_at": "2026-02-21T00:00:00Z",
    "updated_at": "2026-02-21T00:00:00Z"
  },
  "trigger": {
    "type": "task_intent",
    "conditions": [
      {
        "field": "task.type",
        "operator": "in",
        "value": [
          "mcp_cloudflare_dns"
        ]
      }
    ]
  },
  "input_schema": {
    "required_params": [
      {
        "name": "zone_id",
        "type": "string",
        "description": "Cloudflare zone ID"
      }
    ],
    "optional_params": []
  },
  "output_schema": {
    "fields": [
      {
        "name": "records",
        "type": "array",
        "description": "DNS records"
      }
    ]
  },
  "execution_dag": {
    "nodes": [
      {
        "id": "fetch",
        "action": "http_get",
        "params": {
          "url": "https://api.cloudflare.com/client/v4/zones/{{input.zone_id}}/dns_records",
          "headers": {
            "Authorization": "Bearer {{env.CF_API_TOKEN}}"
          },
          "timeout_ms": 10000
        }
      },
      {
        "id": "check",
        "action": "condition_check",
        "params": {
          "field": "{{fetch.output.status_code}}",
          "operator": "equals",
          "value": 200
        }
      },
      {
        "id": "extract",
        "action": "json_extract",
        "params": {
          "data": "{{fetch.output.body}}",
          "path": "$.result[*]",
          "fields": [
            "id",
            "type",
            "name",
            "content",
            "ttl"
          ]
        }
      },
      {
        "id": "ret",
        "action": "return_result",
        "params": {
          "records": "{{extract.output.value}}"
        }
      }
    ],
    "edges": [
      {
        "from": "fetch",
        "to": "check"
      },
      {
        "from": "check",
        "to": "extract"
      },
      {
        "from": "extract",
        "to": "ret"
      }
    ],
    "entry_node": "fetch",
    "exit_node": [
      "ret"
    ]
  },
  "security": {
    "network_whitelist": [
      "api.cloudflare.com"
    ],
    "file_permissions": {
      "read": [],
      "write": []
    },
    "max_execution_time_ms": 15000,
    "max_retries": 1,
    "sandbox_level": "standard",
    "dangerous_patterns": []
  },
  "mcp_compatible": true,
  "required_mcp_capabilities": [
    "cloudflare"
  ],
  "jade_signature": {
