{
  "jade_version": "1.0.0",
  "skill_id": "mcp_stripe_subscriptions",
  "metadata": {
    "name": "MCP Stripe Subscriptions",
    "version": "1.0.0",
    "description": "List subscriptions for a Stripe customer.",
    "author": "jade-mcp-bridge",
    "tags": [
      "mcp",
      "stripe",
      "subscriptions",
      "billing"
    ],
    "license": "BSL-1.1",
    "created_at": "2026-02-22T17:49:27Z",
    "updated_at": "2026-02-22T17:49:27Z"
  },
  "trigger": {
    "type": "task_intent",
    "conditions": [
      {
        "field": "task.type",
        "operator": "in",
        "value": [
          "mcp_stripe_subscriptions"
        ]
      }
    ]
  },
  "input_schema": {
    "required_params": [
      {
        "name": "customer_id",
        "type": "string",
        "description": "Stripe customer ID"
      }
    ],
    "optional_params": []
  },
  "output_schema": {
    "fields": [
      {
        "name": "results",
        "type": "array",
        "description": "Subscriptions"
      },
      {
        "name": "status",
        "type": "string",
        "description": "Status"
      }
    ]
  },
  "execution_dag": {
    "nodes": [
      {
        "id": "fetch",
        "action": "http_get",
        "params": {
          "url": "https://api.stripe.com/v1/subscriptions?customer={{input.customer_id}}",
          "headers": {
            "Authorization": "Bearer {{env.STRIPE_SECRET}}"
          }
        }
      },
      {
        "id": "chk",
        "action": "condition_check",
        "params": {
          "field": "{{fetch.output.status_code}}",
          "operator": "equals",
          "value": 200
        }
      },
      {
        "id": "ext",
        "action": "json_extract",
        "params": {
          "data": "{{fetch.output.body}}",
          "path": "$.data[*]",
          "fields": [
            "id",
            "status",
            "current_period_start",
            "current_period_end",
            "plan"
          ]
        }
      },
      {
        "id": "ret",
        "action": "return_result",
        "params": {
          "results": "{{ext.output.value}}",
          "status": "ok"
        }
      }
    ],
    "edges": [
      {
        "from": "fetch",
        "to": "chk"
      },
      {
        "from": "chk",
        "to": "ext"
      },
      {
        "from": "ext",
        "to": "ret"
      }
    ],
    "entry_node": "fetch",
    "exit_node": [
      "ret"
    ]
  },
  "security": {
    "network_whitelist": [
      "api.stripe.com"
    ],
    "file_permissions": {
      "read": [],
      "write": []
    },
    "max_execution_time_ms": 15000,
    "max_retries": 1,
    "sandbox_level": "standard",
    "dangerous_patterns": [],
    "env_whitelist": [
      "STRIPE_SECRET"
    ]
  },
  "mcp_compatible": true,
  "required_mcp_capabilities": [
    "stripe"
  ],
