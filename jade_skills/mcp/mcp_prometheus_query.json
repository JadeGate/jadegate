{
  "jade_version": "1.0.0",
  "skill_id": "mcp_prometheus_query",
  "metadata": {
    "name": "MCP Prometheus Query",
    "version": "1.0.0",
    "description": "Execute a PromQL query.",
    "author": "jade-mcp-bridge",
    "tags": [
      "mcp",
      "prometheus",
      "monitoring",
      "metrics"
    ],
    "license": "BSL-1.1",
    "created_at": "2026-02-22T17:49:27Z",
    "updated_at": "2026-02-22T17:49:27Z"
  },
  "trigger": {
    "type": "task_intent",
    "conditions": [
      {
        "field": "task.type",
        "operator": "in",
        "value": [
          "mcp_prometheus_query"
        ]
      }
    ]
  },
  "input_schema": {
    "required_params": [
      {
        "name": "host",
        "type": "string",
        "description": "Prometheus server host"
      },
      {
        "name": "query",
        "type": "string",
        "description": "PromQL query"
      }
    ],
    "optional_params": []
  },
  "output_schema": {
    "fields": [
      {
        "name": "results",
        "type": "array",
        "description": "Query results"
      },
      {
        "name": "status",
        "type": "string",
        "description": "Status"
      }
    ]
  },
  "execution_dag": {
    "nodes": [
      {
        "id": "fetch",
        "action": "http_get",
        "params": {
          "url": "https://{{input.host}}/api/v1/query?query={{input.query}}",
          "headers": {
            "Authorization": "Bearer {{env.PROM_TOKEN}}"
          }
        }
      },
      {
        "id": "chk",
        "action": "condition_check",
        "params": {
          "field": "{{fetch.output.status_code}}",
          "operator": "equals",
          "value": 200
        }
      },
      {
        "id": "ext",
        "action": "json_extract",
        "params": {
          "data": "{{fetch.output.body}}",
          "path": "$.data.result[*]",
          "fields": [
            "metric",
            "value"
          ]
        }
      },
      {
        "id": "ret",
        "action": "return_result",
        "params": {
          "results": "{{ext.output.value}}",
          "status": "ok"
        }
      }
    ],
    "edges": [
      {
        "from": "fetch",
        "to": "chk"
      },
      {
        "from": "chk",
        "to": "ext"
      },
      {
        "from": "ext",
        "to": "ret"
      }
    ],
    "entry_node": "fetch",
    "exit_node": [
      "ret"
    ]
  },
  "security": {
    "network_whitelist": [
      "prometheus.local"
    ],
    "file_permissions": {
      "read": [],
      "write": []
    },
    "max_execution_time_ms": 15000,
    "max_retries": 1,
    "sandbox_level": "standard",
    "dangerous_patterns": [],
    "env_whitelist": [
      "PROM_TOKEN"
    ]
  },
  "mcp_compatible": true,
  "required_mcp_capabilities": [
    "prometheus"
  ],
