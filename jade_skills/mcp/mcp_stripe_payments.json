{
  "jade_version": "1.0.0",
  "skill_id": "mcp_stripe_payments",
  "metadata": {
    "name": "MCP Stripe List Payments",
    "version": "1.0.0",
    "description": "List recent Stripe payments.",
    "author": "jade-mcp-bridge",
    "tags": [
      "mcp",
      "stripe",
      "payments",
      "billing"
    ],
    "license": "BSL-1.1",
    "created_at": "2026-02-21T00:00:00Z",
    "updated_at": "2026-02-21T00:00:00Z"
  },
  "trigger": {
    "type": "task_intent",
    "conditions": [
      {
        "field": "task.type",
        "operator": "in",
        "value": [
          "mcp_stripe_payments"
        ]
      }
    ]
  },
  "input_schema": {
    "required_params": [],
    "optional_params": [
      {
        "name": "limit",
        "type": "number",
        "description": "Number of payments",
        "default": 10
      }
    ]
  },
  "output_schema": {
    "fields": [
      {
        "name": "payments",
        "type": "array",
        "description": "Payment list"
      }
    ]
  },
  "execution_dag": {
    "nodes": [
      {
        "id": "fetch",
        "action": "http_get",
        "params": {
          "url": "https://api.stripe.com/v1/charges?limit={{input.limit | default:10}}",
          "headers": {
            "Authorization": "Bearer {{env.STRIPE_SECRET_KEY}}"
          },
          "timeout_ms": 10000
        }
      },
      {
        "id": "check",
        "action": "condition_check",
        "params": {
          "field": "{{fetch.output.status_code}}",
          "operator": "equals",
          "value": 200
        }
      },
      {
        "id": "extract",
        "action": "json_extract",
        "params": {
          "data": "{{fetch.output.body}}",
          "path": "$.data[*]",
          "fields": [
            "id",
            "amount",
            "currency",
            "status",
            "created"
          ]
        }
      },
      {
        "id": "ret",
        "action": "return_result",
        "params": {
          "payments": "{{extract.output.value}}"
        }
      }
    ],
    "edges": [
      {
        "from": "fetch",
        "to": "check"
      },
      {
        "from": "check",
        "to": "extract"
      },
      {
        "from": "extract",
        "to": "ret"
      }
    ],
    "entry_node": "fetch",
    "exit_node": [
      "ret"
    ]
  },
  "security": {
    "network_whitelist": [
      "api.stripe.com"
    ],
    "file_permissions": {
      "read": [],
      "write": []
    },
    "max_execution_time_ms": 15000,
    "max_retries": 1,
    "sandbox_level": "standard",
    "dangerous_patterns": []
  },
  "mcp_compatible": true,
  "required_mcp_capabilities": [
    "stripe"
  ]
}