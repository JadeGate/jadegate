{
  "jade_version": "1.0.0",
  "skill_id": "pdf_table_parser",
  "metadata": {
    "name": "PDF Table Parser SOP",
    "version": "1.0.0",
    "description": "Safely read and parse complex tables from local PDF files. Extracts structured tabular data without executing any embedded scripts or macros. Pure local file operation.",
    "author": "jade-core-team",
    "tags": ["pdf", "table", "parser", "data-extraction", "local"],
    "license": "MIT",
    "created_at": "2026-02-21T00:00:00Z",
    "updated_at": "2026-02-21T00:00:00Z"
  },
  "trigger": {
    "type": "task_intent",
    "conditions": [
      {
        "field": "task.type",
        "operator": "equals",
        "value": "parse_pdf_table"
      }
    ]
  },
  "input_schema": {
    "required_params": [
      {
        "name": "file_path",
        "type": "string",
        "description": "Local path to the PDF file"
      }
    ],
    "optional_params": [
      {
        "name": "pages",
        "type": "string",
        "description": "Page range to parse, e.g. '1-3' or 'all'",
        "default": "all"
      },
      {
        "name": "output_format",
        "type": "string",
        "description": "Output format: json, csv, or markdown",
        "default": "json"
      },
      {
        "name": "merge_cells",
        "type": "boolean",
        "description": "Whether to merge spanning cells",
        "default": true
      }
    ]
  },
  "output_schema": {
    "fields": [
      { "name": "tables", "type": "array", "description": "Array of extracted tables, each containing rows and columns" },
      { "name": "page_count", "type": "number", "description": "Number of pages processed" },
      { "name": "table_count", "type": "number", "description": "Total number of tables found" }
    ]
  },
  "execution_dag": {
    "nodes": [
      {
        "id": "validate_file",
        "action": "file_read",
        "params": {
          "path": "{{input.file_path}}",
          "encoding": "binary"
        }
      },
      {
        "id": "check_pdf_magic",
        "action": "condition_check",
        "params": {
          "field": "{{validate_file.output.content | slice:0:5}}",
          "operator": "equals",
          "value": "%PDF-"
        }
      },
      {
        "id": "check_file_size",
        "action": "condition_check",
        "params": {
          "field": "{{validate_file.output.size_bytes}}",
          "operator": "less_than",
          "value": 104857600
        }
      },
      {
        "id": "extract_pages",
        "action": "pdf_extract_pages",
        "params": {
          "path": "{{input.file_path}}",
          "pages": "{{input.pages | default:'all'}}"
        }
      },
      {
        "id": "detect_tables",
        "action": "pdf_detect_tables",
        "params": {
          "pages_data": "{{extract_pages.output.pages}}",
          "merge_cells": "{{input.merge_cells | default:true}}"
        }
      },
      {
        "id": "format_output",
        "action": "data_transform",
        "params": {
          "input_data": "{{detect_tables.output.tables}}",
          "format": "{{input.output_format | default:'json'}}"
        }
      },
      {
        "id": "return_result",
        "action": "return_result",
        "params": {
          "tables": "{{format_output.output.result}}",
          "page_count": "{{extract_pages.output.page_count}}",
          "table_count": "{{detect_tables.output.table_count}}"
        }
      },
      {
        "id": "abort_not_pdf",
        "action": "return_error",
        "params": {
          "error_code": "INVALID_PDF",
          "message": "File is not a valid PDF document (magic bytes mismatch)"
        }
      },
      {
        "id": "abort_too_large",
        "action": "return_error",
        "params": {
          "error_code": "FILE_TOO_LARGE",
          "message": "PDF file exceeds 100MB size limit"
        }
      }
    ],
    "edges": [
      { "from": "validate_file", "to": "check_pdf_magic" },
      { "from": "check_pdf_magic", "to": "check_file_size", "condition": "success" },
      { "from": "check_pdf_magic", "to": "abort_not_pdf", "condition": "failure" },
      { "from": "check_file_size", "to": "extract_pages", "condition": "success" },
      { "from": "check_file_size", "to": "abort_too_large", "condition": "failure" },
      { "from": "extract_pages", "to": "detect_tables" },
      { "from": "detect_tables", "to": "format_output" },
      { "from": "format_output", "to": "return_result" }
    ],
    "entry_node": "validate_file",
    "exit_node": ["return_result", "abort_not_pdf", "abort_too_large"]
  },
  "security": {
    "network_whitelist": [],
    "file_permissions": {
      "read": ["{{input.file_path}}"],
      "write": []
    },
    "max_execution_time_ms": 120000,
    "max_retries": 0,
    "sandbox_level": "strict",
    "dangerous_patterns": []
  },
  "mcp_compatible": true,
  "required_mcp_capabilities": ["filesystem"]
}